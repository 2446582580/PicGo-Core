{
  "extends": "tslint-config-standard",
  "rules": {
    "class-name": true,
    "no-unused-variable": true,
    "typedef": [
      true,
      "call-signature",
      "property-declaration"
    ]
  },
  "compilerOptions": {
    "module": "commonjs",
    "sourceMap": true,
    "target": "es6",
    "types": [
      "mocha",
      "chai",
      "jest"
    ]
  }
}